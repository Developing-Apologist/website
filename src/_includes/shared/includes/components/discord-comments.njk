<style>
  /* Discord Comments Component */
  .discord-comments-container {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color, #374151);
  }

  .discord-comments-header h3 {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary, #fff);
    margin-bottom: 0.5rem;
  }

  .discord-comments-header p {
    margin-bottom: 1.5rem;
    color: var(--text-secondary, #d1d5db);
  }

  .comment-form-section {
    margin-bottom: 2rem;
  }

  .comment-form-section h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary, #fff);
    margin-bottom: 1rem;
  }

  .comment-form-section label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: var(--text-secondary, #d1d5db);
  }

  .comment-form-section input[type="text"],
  .comment-form-section textarea {
    width: 100%;
    background-color: var(--card-bg, #1f2937);
    border: 1px solid var(--border-color, #374151);
    border-radius: 0.375rem;
    padding: 0.75rem 1rem;
    color: var(--text-primary, #fff);
    transition: all 0.2s ease;
  }

  .comment-form-section input[type="text"]:focus,
  .comment-form-section textarea:focus {
    outline: none;
    border-color: var(--accent-primary, #3b82f6);
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.4);
  }

  .comment-form-section button[type="submit"] {
    background-color: var(--accent-primary, #3b82f6);
    color: #fff;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
  }

  .comment-form-section button[type="submit"]:hover {
    background-color: var(--accent-secondary, #60a5fa);
  }

  .discord-join-section {
    padding: 1rem 1.25rem;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
    background-color: var(--card-bg, #1f2937);
    border: 1px solid var(--border-color, #374151);
    border-radius: 0.5rem;
  }

  .discord-join-section > div {
    font-weight: 600;
    font-size: 1.1rem;
    color: #fff;
  }

  .discord-join-btn {
    min-width: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    white-space: nowrap;
  }

  .discord-comment {
    display: flex;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color, #374151);
  }

  .discord-comment .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--accent-primary, #3b82f6);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.25rem;
  }

  .discord-comment .text {
    color: var(--text-secondary, #d1d5db);
    line-height: 1.6;
  }
</style>

<!-- Discord Comments -->
