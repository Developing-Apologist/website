---
layout: base.njk
---

<article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Post Header -->
    <header class="mb-12">
        <div class="mb-6">
            <a href="/" class="text-accent-primary hover:text-accent-secondary transition-colors duration-200">
                ‚Üê Back to Blog
            </a>
        </div>
        
        <!-- Only show the H1 from markdown content, so remove this title: -->
        {# <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">{{ title }}</h1> #}
        
        <!-- Modern horizontal date layout, no icons -->
        <div class="flex flex-wrap items-center gap-3 text-text-muted mb-6">
            <span class="text-sm">{{ date | dateReadable }}</span>
        </div>
        
        {# Remove description at the top #}
        {# {% if description %}
        <p class="text-xl text-text-secondary leading-relaxed">
            {{ description }}
        </p>
        {% endif %} #}
    </header>
    
    <!-- Post Content -->
    <div class="blog-post prose prose-invert max-w-none">
        {{ content | safe }}
    </div>
    
        <!-- Post Footer -->
        <footer class="mt-12 pt-8 border-t border-border-color">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div class="text-text-muted text-sm">
                    <p>Published on {{ date | dateReadable }}</p>
                    {% if lastModified %}
                    <p>Last updated on {{ lastModified | dateReadable }}</p>
                    {% endif %}
                </div>
                
                <div class="flex gap-4">
                    <a href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ page.url | absoluteUrl }}" 
                       class="text-text-muted hover:text-accent-primary transition-colors duration-200">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                        </svg>
                    </a>
                    
                    <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ page.url | absoluteUrl }}" 
                       class="text-text-muted hover:text-accent-primary transition-colors duration-200">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                    </a>
                </div>
            </div>
            
            <!-- Tags Section -->
            {% if tags %}
            <div class="mt-6 pt-6 border-t border-border-color">
                <div class="flex flex-wrap gap-2">
                    {% for tag in tags %}
                    <a href="/tags/{{ tag | slug }}" class="px-3 py-1 rounded-full bg-accent-primary/20 text-accent-primary text-xs font-medium hover:bg-accent-primary/30 transition-colors duration-200">
                        {{ tag }}
                    </a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </footer>

    <!-- Comments Section -->
    {% include "shared/includes/components/discord-comments.njk" %}
</article> 